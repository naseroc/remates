<div class="container">
	<h1><%= @product.name %></h1>

	<% if flash[:notice] %>
	<div class="alert alert-success alert-dismissible" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<strong>Enhorabuena!</strong> <%= flash[:notice] %>
	</div>

	<% elsif flash[:alert] %>
	<div class="alert alert-warning alert-dismissible" role="alert">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		<strong>Atenci√≥n!</strong> <%= flash[:alert] %>
	</div>
	<% end %>


	<div class="row">
		<div class="col-sm-6 col-md-4 col-md-offset-4">
			<div class="thumbnail">
				<img src="<%= @product.photo%>" class="img-responsive">
				<div class="caption">
					<h3><%= @product.name %></h3>
					<p><%= @product.description%></p>
					<p>Precio: <%= @product.price %></p>
					<% if @product.available == false %>
						<% if @product.winner == current_user.id %>
						<div class="alert alert-info" role="alert">Remate cerrado, GANASTE</div>
						<% else %>
						<div class="alert alert-info" role="alert">Remate cerrado, PERDISTE</div>
						<% end %>
					<% else %>
					<p>Remate finaliza en: <%=@caduca%></p>
					<p><%= link_to 'Subir apuesta en $500', new_product_bet_path(@product), class:"btn btn-primary" %></p>
					<% end %>
				</div>
			</div>
		</div>
	</div>

</div>
