<h1>Remates disponibles</h1>

<div class="row">
<% @products.each do |product| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="<%= product.photo%>" class="img-responsive">
      <div class="caption">
        <h3><%= product.name %></h3>
        <p><%= product.description%></p>
        <p>Precio actual: <%= product.price %></p>
        <p>Publicado en: <%=product.created_at %></p>
        <p><%= link_to 'Subir apuesta', new_product_bet_path(product), class:"btn btn-primary" %></p>
      </div>
    </div>
  </div>
</div>
<% end %>

